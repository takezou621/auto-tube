# Application
APP_NAME=AutoTube
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://autotube:password@localhost:5432/autotube
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ElevenLabs (Voice Synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=your-preferred-voice-id

# Google Cloud (TTS alternative)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# NewsAPI
NEWS_API_KEY=your-newsapi-key-here

# YouTube Data API
YOUTUBE_CLIENT_ID=your-youtube-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:8080/oauth2callback

# Stability AI (Image Generation)
STABILITY_API_KEY=sk-your-stability-api-key-here

# Content Settings
DEFAULT_VIDEO_LENGTH=300
DEFAULT_LANGUAGE=ja
DEFAULT_CATEGORY=technology

# Quality Settings
VIDEO_RESOLUTION=1920x1080
VIDEO_FPS=30
AUDIO_BITRATE=128k
VIDEO_BITRATE=5000k

# Schedule Settings
POSTING_SCHEDULE=Mon:20:00,Wed:19:00,Fri:20:00,Sun:18:00
CONTENT_GENERATION_ADVANCE_HOURS=12

# Trend Analysis
MIN_TREND_SCORE=0.6
MAX_CONTENT_AGE_HOURS=48

# Safety & Compliance
ENABLE_CONTENT_REVIEW=true
ENABLE_COPYRIGHT_CHECK=true
FORBIDDEN_KEYWORDS=暴力,差別,誹謗中傷

# Storage
STORAGE_PATH=/app/data
VIDEO_OUTPUT_PATH=/app/data/videos
AUDIO_OUTPUT_PATH=/app/data/audio
IMAGE_OUTPUT_PATH=/app/data/images

# API Rate Limits
OPENAI_RPM=500
ELEVENLABS_CHARACTER_LIMIT=100000
YOUTUBE_QUOTA_DAILY=10000

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_AI_IMAGE_GENERATION=false
ENABLE_THUMBNAIL_AB_TEST=false
ENABLE_ANALYTICS=true
